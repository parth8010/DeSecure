# Environment Variables (Copy to .env and update values)

# Secret key for JWT tokens (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-this-in-production-12345

# Database URL
DATABASE_URL=sqlite:///./cybersecurity_platform.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/dbname

# Server settings
HOST=0.0.0.0
PORT=8000

# CORS origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# API Key default expiry (days)
API_KEY_DEFAULT_EXPIRY_DAYS=90
